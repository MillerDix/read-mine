{
    "name": "React App",
    "description": "React App",
    "manifest_version": 2,
    "version": "1.0.0",
    "background": {
      "scripts": ["background/background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup/popup.html"
    },
    "permissions": [
      "contextMenus",
      "activeTab",
      "tabs",
      "storage",
      "https://*/*"
    ]
  }